<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_paper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/lineaerLayoutId"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/waveColor1"
        >

        <ImageView
            android:id="@+id/image_point_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusedByDefault="true"
            android:background="@drawable/image_select"
            android:layout_marginRight="5dp"

            />

        <ImageView
            android:id="@+id/image_point_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/image_select"
            android:layout_marginRight="5dp"
            />
        <ImageView
            android:id="@+id/image_point_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/image_select"

            />


    </LinearLayout>

</RelativeLayout>

